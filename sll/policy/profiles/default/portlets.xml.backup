<?xml version="1.0"?>
<portlets
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="collective.cart.core">

  <portlet
    addview="portlet.Cart"
    title="Cart"
    description="A portlet which shows cart content."
    />

  <assignment
    manager="plone.rightcolumn"
    category="context"
    key="/kauppa"
    type="portlet.Cart"
    name="Cart"
    />


  <!-- Remove portlets from left column -->
  <assignment remove="True" name="Cart" category="context" key="/"
              manager="plone.leftcolumn" type="portlet.Cart" />

</portlets>

