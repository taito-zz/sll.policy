<?xml version="1.0"?>
<portlets
  i18n:domain="sll.policy"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  >

  <!-- Hide default Calendar portlet -->
  <portlet addview="portlets.Login" remove="true" />
  <!-- Hide Classic portlet -->
  <portlet addview="portlets.Classic" remove="true" />

  <!-- Remove portlets from left column -->
  <!-- <assignment remove="True" name="navigation" category="context" key="/"
              manager="plone.leftcolumn" type="portlets.Navigation" /> -->
  <assignment remove="True" name="portlet_kartta" category="context" key="/"
              manager="plone.leftcolumn" type="portlets.Navigation" />
  <assignment remove="True" name="tiedotteet" category="context" key="/" manager="plone.leftcolumn" />
  <assignment remove="True" name="suomen-luonnonsuojeluliiton-jaesenenae" category="context" key="/" manager="plone.leftcolumn" />
  <assignment remove="True" name="recent-items" category="context" key="/" manager="plone.leftcolumn" />
  <assignment remove="True" name="Cart" category="context" key="/" manager="plone.leftcolumn" />


  <!-- Remove portlets from right column -->
  <assignment remove="True" name="news" category="context" key="/"
              manager="plone.rightcolumn" type="portlets.News" />
  <assignment remove="True" name="events" category="context" key="/"
              manager="plone.rightcolumn" type="portlets.Events" />
  <assignment remove="True" name="bannerit" category="context" key="/" manager="plone.rightcolumn" />
  <assignment remove="True" name="review-list" category="context" key="/" manager="plone.rightcolumn" />

  <!-- Assign portlets to right column -->
  <assignment
    name="navigation"
    category="context"
    key="/"
    manager="plone.leftcolumn"
    type="portlets.Navigation"
    visible="True"
    >
    <property name="topLevel">1</property>
    <property name="currentFolderOnly">False</property>
    <property name="name"></property>
    <property name="includeTop">False</property>
    <property name="bottomLevel">0</property>
    <property name="root"></property>
  </assignment>
  <assignment
    name="sll-map"
    category="context"
    key="/"
    manager="plone.rightcolumn"
    type="portlet.SLLMap"
    visible="True"
    >
  </assignment>
  <assignment
    name="recent-items"
    category="context"
    key="/"
    manager="plone.rightcolumn"
    type="portlets.Recent"
    visible="True"
    >
    <property name="count">5</property>
  </assignment>

</portlets>

