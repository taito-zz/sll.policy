<?xml version="1.0"?>
<portlets
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="sll.policy">

  <!-- Hide default Calendar portlet -->
  <portlet addview="portlets.Login" remove="true" />
  <!-- Hide Classic portlet -->
  <portlet addview="portlets.Classic" remove="true" />

  <!-- Remove portlets from left column -->
  <assignment remove="True" name="navigation" category="context" key="/"
              manager="plone.leftcolumn" type="portlets.Navigation" />

  <!-- Remove portlets from right column -->
  <assignment remove="True" name="news" category="context" key="/"
              manager="plone.rightcolumn" type="portlet.News" />
  <assignment remove="True" name="events" category="context" key="/"
              manager="plone.rightcolumn" type="portlet.Events" />

</portlets>

